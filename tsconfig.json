{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 12",
  
    "compilerOptions": {
      "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string", "DOM"],
      "module": "commonjs",
      "target": "es2019",
  
      "strict": true,
      "strictNullChecks": false,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./lib"
    },
    "exclude": ["./lib", "./tests", "./playwright.config.ts"],
    "typedocOptions": {
      "entryPoints": ["src/matchers"],
      "exclude": ["src/matchers/index.ts"],
      "out": "docs"
    }
}